<!DOCTYPE html>
<link href="~/Content/HomePage.css" rel="stylesheet" type="text/css" />

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   


</head>
<body>
    <header>
        <p allign="left">Warcraft Chess</p>
        <p text-allign="right">@Html.ActionLink("Login", "Login") | @Html.ActionLink("Register", "Register")</p>
    </header>
    <section>
        <nav>
            <ul>
                <li><a href="#">@Html.ActionLink("Home", "", new { controller = "Home" })</a></li>
                <li> <a href="#">@Html.ActionLink("Leaderboard", "Leaderboard", new { controller = "Leaderboard" })</a></li>
                <li><a href="#">@Html.ActionLink("Play", "Chess", new { controller = "Chess" })</a></li>
            </ul>
        </nav>
    </section>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Warcraft Chess</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
